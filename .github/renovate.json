{
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":autodetectPinVersions",
    ":prHourlyLimit2",
    ":prConcurrentLimit20",
    "group:monorepos",
    "group:recommended",
    "workarounds:typesNodeVersioning",
    "workarounds:reduceRepologyServerLoad",
    "helpers:disableTypesNodeMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "rangeStrategy": "bump",
  "ignorePaths": [
    "**/node_modules/**"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "^@cucumber"
      ],
      "groupName": "Cucumber",
      "labels": ["@serenity-js/cucumber"]
    },
    {
      "packagePatterns": [
        "http-shutdown",
        "portfinder",
        "@hapi/hapi",
        "@types/hapi",
        "@types/restify",
        "koa",
        "restify"
      ],
      "groupName": "Local Server dependencies",
      "labels": ["@serenity-js/local-server"]
    },
    {
      "packagePatterns": [
        "^@wdio",
        "^webdriverio",
        "puppeteer-core"
      ],
      "groupName": "WebdriverIO dependencies",
      "labels": ["@serenity-js/webdriverio"]
    },
    {
      "packagePatterns": [
        "^ts-node$",
        "^typescript$"
      ],
      "groupName": "TypeScript dependencies"
    },
    {
      "packagePatterns": [
        "docusaurus",
        "clsx",
        "mdx-mermaid",
        "mermaid",
        "prism-react-renderer",
        "react",
        "typedoc"
      ],
      "groupName": "Website dependencies"
    },
    {
      "packagePatterns": [
        "^eslint$",
        "^eslint-plugin",
        "^@typescript-eslint"
      ],
      "groupName": "ESLint dependencies"
    },
    {
      "packagePatterns": [
        "@commitlint/cli",
        "@commitlint/config-conventional",
        "@types/chai-as-promised",
        "@types/istanbul-lib-coverage",
        "@types/sinon",
        "@types/sinon-chai",
        "chai-as-promised",
        "chromedriver",
        "coveralls",
        "cz-conventional-changelog",
        "cz-customizable",
        "husky",
        "istanbul-lib-coverage",
        "lerna",
        "mocha-testdata",
        "rimraf",
        "sinon",
        "sinon-chai"
      ],
      "groupName": "Development tools"
    }
  ],
  "schedule": [
    "after 3am",
    "before 9am"
  ]
}
