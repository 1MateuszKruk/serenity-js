{
  "lerna": "3.22.1",
  "loglevel": "info",
  "hoist": true,
  "nohoist": [
    "@types/jasmine",
    "@types/mocha",
    "@types/cucumber",
    "@cucumber/create-meta",
    "@cucumber/cucumber",
    "@cucumber/messages",
    "cucumber",
    "jasmine"
  ],
  "packages": [
    "documentation/*",
    "examples/*",
    "integration/*",
    "packages/*"
  ],
  "version": "2.22.0",
  "command": {
    "create": {
      "homepage": "https://serenity-js.org",
      "license": "Apache-2.0"
    },
    "publish": {
      "loglevel": "verbose"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "exact": true,
      "message": "chore(release): %s\n[ci skip]",
      "loglevel": "verbose"
    }
  },
  "ignoreChanges": [
    "**/documentation/**",
    "**/examples/**",
    "**/integration/**",
    "**/*.md",
    "**/spec/**",
    "./package.json"
  ]
}
