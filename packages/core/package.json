{
  "name": "@serenity-js/core",
  "version": "1.6.0",
  "description": "Serenity/JS: Next generation acceptance testing library for modern web applications.",
  "author": "Jan Molak <jan.molak@smartcodeltd.co.uk>",
  "homepage": "http://serenity-js.org",
  "license": "Apache-2.0",
  "config": {
    "access": "public"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "bdd",
    "tdd",
    "test",
    "testing",
    "serenity",
    "screenplay"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json --format stylish",
    "test": "nyc --report-dir ../../target/coverage/core mocha --opts ../../mocha.opts 'spec/**/*.spec.*'",
    "package": "tsc --project tsconfig.json",
    "verify": "npm run clean && npm run lint && npm test && npm run package"
  },
  "dependencies": {
    "error-stack-parser": "2.0.2",
    "graceful-fs": "4.1.11",
    "mkdirp": "0.5.1",
    "moment": "2.22.2",
    "sanitize-filename": "1.6.1",
    "tiny-types": "1.10.3"
  },
  "devDependencies": {
    "@types/mkdirp": "0.5.2",
    "@types/sanitize-filename": "1.1.28"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jan-molak/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/jan-molak/serenity-js/issues"
  },
  "engines": {
    "node": ">= 6.9.x",
    "npm": ">= 3"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "*.js",
      "lib",
      "spec",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "json",
      "text-summary"
    ],
    "cache": true,
    "all": true
  }
}
