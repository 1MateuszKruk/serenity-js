{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2019",
    "lib": [
      "es2019",
      "dom"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "src/adapter/**",
    "src/index.ts"
  ],
  "include": [
    "src/config/**/*.ts",
    "src/screenplay/**/*.ts",
    "src/api.ts"
  ]
}
