{
  "name": "@serenity-js/cucumber",
  "version": "1.0.0",
  "description": "Enables Serenity/JS to run Cucumber JS 1.3.x test scenarios",
  "author": {
    "name": "Jan Molak",
    "email": "jan.molak@smartcodeltd.co.uk",
    "url": "https://janmolak.com"
  },
  "homepage": "http://serenity-js.org",
  "license": "Apache-2.0",
  "config": {
    "access": "public"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "serenity-js",
    "cucumber",
    "tdd",
    "bdd",
    "test",
    "testing"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project tsconfig-lint.json --config ../../tslint.json --format stylish",
    "test": "nyc --report-dir ../../target/coverage/cucumber mocha --opts ../../mocha.opts 'spec/**/*.spec.*'",
    "compile": "tsc --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jan-molak/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/jan-molak/serenity-js/issues"
  },
  "engines": {
    "node": ">= 6.9.x",
    "npm": ">= 3"
  },
  "dependencies": {
    "gherkin": "5.1.0"
  },
  "peerDependencies": {
    "@serenity-js/core": "^1.6.0",
    "cucumber": ">= 1.3.3",
    "tiny-types": "^1.11.2"
  },
  "devDependencies": {
    "@serenity-js/core": "*",
    "@integration/testing-tools": "*",
    "@types/cucumber": "1.3.3",
    "cucumber": "1.3.3",
    "tiny-types": "1.11.2"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "lib",
      "node_modules",
      "spec"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json"
    ],
    "cache": true,
    "all": true
  }
}
