{
  "name": "@serenity-js/cucumber",
  "version": "3.0.0-rc.24",
  "description": "Serenity/JS adapter for Cucumber test runners version 1.x - 7.x",
  "author": {
    "name": "Jan Molak",
    "email": "jan.molak@smartcodeltd.co.uk",
    "url": "https://janmolak.com"
  },
  "funding": {
    "url": "https://github.com/sponsors/serenity-js"
  },
  "homepage": "https://serenity-js.org",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "serenity-js",
    "cucumber",
    "tdd",
    "bdd",
    "test",
    "testing"
  ],
  "scripts": {
    "clean": "rimraf .nyc_output lib target",
    "lint": "eslint --ext ts --config ../../.eslintrc.yml .",
    "lint:fix": "npm run lint -- --fix",
    "test": "nyc mocha --config ../../.mocharc.yml --timeout 30000 'spec/**/*.spec.*'",
    "compile": "tsc --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serenity-js/serenity-js.git",
    "directory": "packages/cucumber"
  },
  "bugs": {
    "url": "https://github.com/serenity-js/serenity-js/issues"
  },
  "engines": {
    "node": "^14 || ^16 || ^18",
    "npm": "^6 || ^7 || ^8"
  },
  "dependencies": {
    "@cucumber/messages": "^19.1.2",
    "@serenity-js/core": "3.0.0-rc.24",
    "cli-table3": "^0.6.2",
    "gherkin": "5.1.0",
    "tiny-types": "^1.19.0"
  },
  "peerDependencies": {
    "@cucumber/cucumber": "^7.3.2 || ^8.5.0",
    "cucumber": "^1.3.3 || ^2.3.1 || ^3.2.1 || ^4.2.1 || ^5.0.0 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "@cucumber/cucumber": {
      "optional": true
    },
    "cucumber": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cucumber/cucumber": "^8.5.0",
    "@integration/testing-tools": "3.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "mocha": "^10.0.0",
    "ts-node": "10.8.2",
    "typescript": "^4.7.4"
  }
}
