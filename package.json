{
  "name": "serenity-js",
  "version": "0.0.1",
  "description": "Serenity/JS: Next generation acceptance testing library for modern web applications.",
  "author": "Jan Molak <jan.molak@smartcodeltd.co.uk>",
  "homepage": "https://github.com/jan-molak/serenity-js",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf staging lib .nyc_output",
    "pretest": "npm run webdriver:update -- --standalone",
    "test": "npm run spec",
    "lint": "tslint --project=tsconfig.json --config=tslint.json --format=prose",
    "package": "tsc --project tsconfig-export.json",
    "verify": "npm run clean && npm run lint && npm test && npm run package && npm run report",
    "rebuild": "npm run clean && npm run verify",
    "commit": "git-cz",
    "webdriver-manager": "webdriver-manager",
    "webdriver:update": "npm run webdriver-manager update",
    "spec:api": "nyc --report-dir=./staging/reports/coverage/api mocha --opts ./spec/mocha.opts 'spec/api/**/*.spec.*'",
    "spec:cookbook": "nyc --report-dir=./staging/reports/coverage/cookbook protractor ./spec/protractor-cookbook.conf.js",
    "spec:integration": "nyc --report-dir=./staging/reports/coverage/integration mocha --opts ./spec/mocha.opts 'spec/integration/*/*.ts'",
    "spec": "npm run spec:api && npm run spec:cookbook && npm run spec:integration",
    "coverage:merge": "istanbul-merge --out=./staging/reports/coverage/coverage-final.json ./staging/reports/coverage/**/coverage-final.json",
    "coverage:report": "nyc report --reporter=html --reporter=lcov --temp-directory=./staging/reports/coverage --report-dir=./staging/reports/coverage",
    "report": "npm run coverage:merge && npm run coverage:report",
    "publish-coverage-report": "cat ./staging/reports/coverage/lcov.info | node ./node_modules/coveralls/bin/coveralls.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "book:build": "rimraf _book && gitbook build",
    "book:publish": "node ./gh-pages.js -d _book",
    "publish": "failsafe publish-coverage-report semantic-release book:build book:publish"
  },
  "peerDependencies": {
    "protractor": ">= 5.0.0 < 6"
  },
  "dependencies": {
    "@types/graceful-fs": "2.0.29",
    "@types/lodash": "4.14.44",
    "@types/mkdirp": "0.3.29",
    "@types/node": "6.0.53",
    "@types/selenium-webdriver": "2.53.39",
    "@types/stack-trace": "0.0.28",
    "graceful-fs": "4.1.11",
    "is-generator": "1.0.3",
    "lodash": "4.17.2",
    "mkdirp": "0.5.1",
    "moment": "2.17.1",
    "selenium-webdriver": "3.0.1",
    "stack-trace": "0.0.9",
    "ts-md5": "1.2.0",
    "util-arity": "1.0.2"
  },
  "devDependencies": {
    "@types/chai": "3.4.34",
    "@types/chai-as-promised": "0.0.29",
    "@types/cucumber": "0.0.35",
    "@types/express": "4.0.34",
    "@types/mocha": "2.2.34",
    "@types/mock-fs": "3.6.30",
    "@types/nock": "8.2.0",
    "@types/sinon": "1.16.33",
    "@types/sinon-chai": "2.7.27",
    "chai": "3.5.0",
    "chai-as-promised": "6.0.0",
    "chai-smoothie": "^0.1.2",
    "commitizen": "2.9.2",
    "coveralls": "2.11.15",
    "cucumber": "1.3.1",
    "cz-conventional-changelog": "1.2.0",
    "express": "4.14.0",
    "gh-pages": "0.12.0",
    "gitbook-cli": "2.3.0",
    "gitbook-plugin-addcssjs": "1.0.2",
    "gitbook-plugin-advanced-emoji": "0.2.1",
    "gitbook-plugin-anchors": "0.7.1",
    "gitbook-plugin-ga": "1.0.1",
    "gitbook-plugin-include-codeblock": "2.1.0",
    "gitbook-plugin-scripts": "1.0.1",
    "gitbook-plugin-styles-less": "1.0.0",
    "gitbook-plugin-youtube": "1.1.0",
    "istanbul": "0.4.5",
    "istanbul-merge": "1.1.1",
    "mocha": "3.2.0",
    "mock-fs": "4.0.0-beta.1",
    "nock": "8.0.0",
    "npm-failsafe": "0.2.1",
    "nyc": "10.0.0",
    "phantomjs-prebuilt": "2.1.14",
    "protractor": "5.0.0",
    "protractor-cucumber-framework": "0.6.0",
    "rimraf": "2.5.4",
    "semantic-release": "^6.3.5",
    "sinon": "1.17.5",
    "sinon-chai": "2.8.0",
    "ts-helper": "0.0.1",
    "ts-node": "1.7.2",
    "tslint": "4.2.0",
    "typescript": "2.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jan-molak/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/jan-molak/serenity-js/issues"
  },
  "engines": {
    "node": ">= 6.9.0 < 7",
    "npm": ">= 2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "spec",
      "examples/**",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [],
    "reporter": [
      "json",
      "text-summary"
    ],
    "cache": true,
    "all": true
  }
}
