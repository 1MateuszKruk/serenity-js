{
  "name": "serenity-js",
  "version": "0.0.1",
  "description": "Serenity BDD for JavaScript and TypeScript",
  "author": "Jan Molak <jan.molak@smartcodeltd.co.uk>",
  "homepage": "https://github.com/jan-molak/serenity-js",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf staging lib",
    "pretest": "npm run webdriver:update -- --standalone",
    "test": "npm run spec",
    "package": "gulp package",
    "behaviour:cucumber": "gulp verify:cucumber",
    "behaviour:protractor": "istanbul cover --dir staging/reports/coverage/behaviour/protractor --root staging/transpiled/src --report json --include-pid --include-all-sources protractor -- staging/transpiled/behaviour/protractor/protractor.conf.js",
    "behaviour": "npm run behaviour:cucumber && npm run behaviour:protractor",
    "verify": "npm run clean && npm run spec && npm run behaviour && npm run coverage && npm run package",
    "verify:protractor": "npm run clean && npm run package && gulp pre-test prepare-examples && npm run behaviour:protractor && npm run aggregate",
    "rebuild": "npm run clean && npm run verify",
    "setup:typings": "npm run typings -- install",
    "setup:webdriver": "npm run webdriver:update -- --standalone",
    "setup": "npm run setup:typings && npm run setup:webdriver",
    "prepublish": "npm run setup",
    "commit": "git-cz",
    "typings": "typings",
    "webdriver-manager": "webdriver-manager",
    "webdriver:update": "npm run webdriver-manager update",

    "spec:api": "nyc --report-dir=./staging/reports/coverage/api mocha --opts ./spec/api/mocha.opts",
    "spec:cookbook": "nyc --report-dir=./staging/reports/coverage/cookbook protractor cookbook/protractor.conf.js",
    "spec": "npm run spec:api && npm run spec:cookbook",

    "coverage:merge": "istanbul-merge --out=./staging/reports/coverage/coverage-final.json ./staging/reports/coverage/**/coverage-final.json",
    "coverage:report": "nyc report --reporter=html --reporter=lcov --temp-directory=./staging/reports/coverage --report-dir=./staging/reports/coverage",
    "coverage": "npm run coverage:merge && npm run coverage:report",

    "report-coverage": "cat ./staging/reports/coverage/lcov.info | node ./node_modules/coveralls/bin/coveralls.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "peerDependencies": {
    "protractor": ">= 4.0.10 < 5"
  },
  "dependencies": {
    "@types/selenium-webdriver": "2.53.37",
    "graceful-fs": "4.1.11",
    "is-generator": "1.0.3",
    "lodash": "4.17.2",
    "mkdirp": "0.5.1",
    "moment": "2.17.1",
    "selenium-webdriver": "2.53.3",
    "stack-trace": "0.0.9",
    "ts-md5": "1.2.0",
    "util-arity": "1.0.2"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "chai-smoothie": "^0.1.2",
    "commitizen": "2.8.5",
    "coveralls": "2.11.12",
    "cucumber": "1.2.2",
    "cz-conventional-changelog": "1.1.7",
    "express": "4.14.0",
    "gulp": "3.9.1",
    "gulp-concat": "2.6.0",
    "gulp-istanbul": "1.0.0",
    "gulp-istanbul-report": "0.0.1",
    "gulp-mocha": "3.0.0",
    "gulp-sourcemaps": "1.6.0",
    "gulp-tslint": "6.0.2",
    "gulp-typescript": "2.13.6",
    "istanbul": "0.4.5",
    "istanbul-merge": "1.1.1",
    "merge2": "1.0.2",
    "mocha": "3.0.0",
    "mock-fs": "4.0.0-beta.1",
    "nock": "8.0.0",
    "nyc": "10.0.0",
    "phantomjs-prebuilt": "2.1.7",
    "protractor": "4.0.13",
    "protractor-cucumber-framework": "0.6.0",
    "remap-istanbul": "0.6.4",
    "rimraf": "2.5.4",
    "run-sequence": "1.2.2",
    "semantic-release": "^4.3.5",
    "sinon": "1.17.5",
    "sinon-chai": "2.8.0",
    "split": "1.0.0",
    "ts-helper": "0.0.1",
    "ts-node": "1.7.2",
    "tslint": "3.15.1",
    "typescript": "2.0.6",
    "typings": "1.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jan-molak/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/jan-molak/serenity-js/issues"
  },
  "engines": {
    "node": ">= 4.2.1",
    "npm": ">= 2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "spec",
      "typings",
      "examples/**",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
    ],
    "reporter": [
      "json",
      "text-summary"
    ],
    "all": true
  }
}
